@model BandAide.Models.ViewModels.CreateMemberSearchViewModel

@{
    ViewData["Title"] = "CreateMemberSearch";
}
<div class="container" style="padding-top:1em">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateMemberSearch" method="post" asp-route-bandId="@Model.BandId">
                <input asp-for="BandId" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <select asp-for="InstrumentId" class="selectpicker" data-live-search="true" data-style="btn-primary">
                        @foreach (var instrument in Model.Instruments)
                        {
                            <option value="@instrument.Id">@instrument.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

